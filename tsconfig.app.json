{

  "extends": "./tsconfig.json",

  "compilerOptions": {

    "outDir": "./out-tsc/app",

    "types": [],

    "target": "ES2022",

    "module": "ESNext",

    "moduleResolution": "Node",

    "experimentalDecorators": true,

    "emitDecoratorMetadata": true,

    "strict": true,

    "skipLibCheck": true,

    "baseUrl": "./",

    "paths": {

      "@app/*": ["src/app/*"]

    }

  },

  "files": [

    "src/main.ts",

    "src/polyfills.ts"

  ],

  "include": [

    "src/**/*.ts"

  ],

  "exclude": [

    "src/test.ts",

    "src/**/*.spec.ts"

  ]

}

 